<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/write">


    <TextView
        android:id="@+id/text_write_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/write_receiver"
        android:layout_alignBottom="@+id/write_receiver"
        android:layout_alignParentStart="true"
        android:text="@string/write_receiver"
        android:textColor="@color/purple_xiaohui"
        android:textSize="20sp"
        tools:text="Reveiver >" />

    <EditText
        android:id="@+id/write_receiver"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_write_receiver"
        android:textColor="@color/blue_ziti" />

    <TextView
        android:id="@+id/text_write_title"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/write_title"
        android:layout_alignBottom="@+id/write_title"
        android:layout_alignParentStart="true"
        android:text="@string/write_title"
        android:textColor="@color/purple_xiaohui"
        android:textSize="20sp"
        tools:text="Title >" />

    <EditText
        android:id="@+id/write_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/write_receiver"
        android:layout_toEndOf="@+id/text_write_title"
        android:textColor="@color/blue_ziti" />

    <EditText
        android:id="@+id/write_content"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="top"
        android:hint="Content >"
        android:textColor="@color/blue_ziti" />

    <Button
        android:id="@+id/write_send"
        android:layout_width="fill_parent"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_selector"
        android:onClick="Write"
        android:text="@string/write_send"
        android:textColor="@android:color/background_light" />
</RelativeLayout>